                app:layout_constraintTop_toBottomOf="@+id/tv_view_Confirmation_age" />



            <TextView
                android:id="@+id/tv_view_Confirmation_qustion1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marg16"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/_1_are_you_interested_to_take_the_covid_19_vaccine"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_view_postcode" />

            <TextView
                android:id="@+id/tv_view_Confirmation_answer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_view_Confirmation_qustion1" />


            <TextView
                android:id="@+id/tv_view_Confirmation_qustion2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marg16"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/_2_do_you_have_any_comorbidities"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
