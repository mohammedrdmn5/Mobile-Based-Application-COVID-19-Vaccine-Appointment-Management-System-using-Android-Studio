            <TextView
                android:id="@+id/tv_view_Confirmation_qustion2_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marg16"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/_2_1_please_selected"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_view_Confirmation_answer2" />

            <TextView
                android:id="@+id/tv_view_Confirmation_sub_answer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_view_Confirmation_qustion2_sub" />

            <TextView
                android:id="@+id/tv_view_Confirmation_qustion3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marg16"
                android:fontFamily="@font/roboto_medium"
                android:text="3. Has COVID-19?"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_view_Confirmation_answer1" />

            <TextView
                android:id="@+id/tv_view_Confirmation_answer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_view_Confirmation_qustion2" />

            <TextView
                android:id="@+id/tv_view_Confirmation_qustion4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marg16"
                android:fontFamily="@font/roboto_medium"
                android:text="4. Has been registered for vaccine?"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_view_Confirmation_answer1" />

            <TextView
                android:id="@+id/tv_view_Confirmation_answer4"
                android:layout_width="match_parent"
